@using AccessManager.Data.Enums
@using AccessManager.ViewModels.Unit
@model MapUserUnitAccessViewModel

<h2 class="text-center">@Model.FirstName @Model.LastName</h2>
<h4 class="text-center">@Model.Department - @Model.Unit</h4>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="text-success">@TempData["Success"]</div>
}

<form id="MapUserUnitForm" method="post" asp-action="MapUserUnitAccess">
    <input type="hidden" name="UserId" value="@Model.UserId" />

    <div class="row mt-5">
        <!-- Accessible Units -->
        <div class="col-md-6">
            <h4>Достъпни отдели</h4>

            <div class="d-flex align-items-end mb-2 gap-2">
                <filter form-id="DepartmentFilterForm1"
                        label="Филтър по дирекция"
                        controller="Department"
                        action="SearchDepartments"
                        hidden-input-id="filterDepartment1"
                        hidden-name="FilterDepartmentId1"
                        filter-id="@Model.FilterDepartmentId1"
                        filter-description="@Model.FilterDepartmentDescription1"
                        submit-on-select="false">
                </filter>
                <button type="submit" name="action1" value="Filter1" class="btn btn-secondary">Приложи</button>
            </div>

            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAllAccessible" /></th>
                        <th>Отдел</th>
                        <th>Дирекция</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var unit in Model.AccessibleUnits.Items)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="SelectedAccessibleUnitIds" value="@unit.UnitId"
                                       @(Model.SelectedAccessibleUnitIds.Contains(unit.UnitId ?? Guid.Empty) ? "checked" : "") />
                            </td>
                            <td>@unit.UnitName</td>
                            <td>@unit.DepartmentName</td>
                        </tr>
                    }
                </tbody>
            </table>

            @await Html.PartialAsync("~/Views/Shared/_Pager.cshtml", Model.AccessibleUnits)
            <button type="submit" name="action1" value="Revoke" class="btn btn-danger mt-2"
                    auth="@Model.LoggedUserWriteAuthority >= AuthorityType.Restricted">
                Премахни избраните
            </button>
            <button type="button" class="btn btn-secondary mt-2" id="selectAllAccessibleBtn">Избери всички</button>
        </div>

        <!-- Inaccessible Units -->
        <div class="col-md-6">
            <h4>Недостъпни отдели</h4>

            <div class="d-flex align-items-end mb-2 gap-2">
                <filter form-id="DepartmentFilterForm2"
                        label="Филтър по дирекция"
                        controller="Department"
                        action="SearchDepartments"
                        hidden-input-id="filterDepartment2"
                        hidden-name="FilterDepartmentId2"
                        filter-id="@Model.FilterDepartmentId2"
                        filter-description="@Model.FilterDepartmentDescription2"
                        submit-on-select="false">
                </filter>
                <button type="submit" name="action1" value="Filter2" class="btn btn-secondary">Приложи</button>
            </div>

            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAllInaccessible" /></th>
                        <th>Отдел</th>
                        <th>Дирекция</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var unit in Model.InaccessibleUnits.Items)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="SelectedInaccessibleUnitIds" value="@unit.UnitId"
                                       @(Model.SelectedInaccessibleUnitIds.Contains(unit.UnitId ?? Guid.Empty) ? "checked" : "") />
                            </td>
                            <td>@unit.UnitName</td>
                            <td>@unit.DepartmentName</td>
                        </tr>
                    }
                </tbody>
            </table>

            @await Html.PartialAsync("~/Views/Shared/_Pager.cshtml", Model.InaccessibleUnits)
            <button type="submit" name="action1" value="Grant" class="btn btn-success mt-2"
                    auth="@Model.LoggedUserWriteAuthority >= AuthorityType.Restricted">
                Добави избраните
            </button>
            <button type="button" class="btn btn-secondary mt-2" id="selectAllInaccessibleBtn">Избери всички</button>
        </div>
    </div>
</form>

<div class="row">
    <a asp-controller="Access" asp-action="MapUserAccess" asp-route-userId="@Model.UserId" class="btn btn-primary m-2">
        АИС достъпи
    </a>
</div>

@section Scripts {
    <script src="~/js/map-unit-access.js" asp-append-version="true"></script>
    <script src="~/js/filter.js" asp-append-version="true"></script>
    <script>
        window.SelectedAccessibleUnitIds = @Html.Raw(Json.Serialize(Model.SelectedAccessibleUnitIds))
        window.SelectedInaccessibleUnitIds = @Html.Raw(Json.Serialize(Model.SelectedInaccessibleUnitIds))
    </script>
}
