@using AccessManager.ViewModels.Unit
@model MapUserUnitAccessViewModel

<h2 class="text-center">@Model.FirstName @Model.LastName</h2>
<h4 class="text-center">@Model.Department - @Model.Unit</h4>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="text-success">@TempData["Success"]</div>
}

<div class="row wrapper mt-5" data-readonly="@(ViewBag.IsReadOnly != null && (bool)ViewBag.IsReadOnly ? "true" : "false")">
    <div class="col-md-6">
        <h4>Достъпни отдели</h4>
        <form id="FilterForm1" method="get" asp-action="MapUserUnitAccess" class="mb-2">
                <input type="hidden" name="userId" value="@Model.UserId" />

            <div class="position-relative">
                <label for="filterDepartmentInput1" class="form-label">Филтър по Дирекция:</label>
                <div class="input-group">
                    <input type="text" id="filterDepartmentInput1" class="form-control" value="@Model.FilterDepartmentDescription1" autocomplete="off">
                    <button type="button" class="btn btn-outline-danger" id="clearDepartmentBtn1">×</button>
                </div>                
                <input type="hidden" id="filterDepartment1" name="filterDepartmentId1" value="@Model.FilterDepartmentId1">
                <div id="filterDepartmentResults1" class="list-group position-absolute" style="z-index:1000;"></div>
            </div>

        </form>

        <form asp-action="RevokeUnitAccess" method="post">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAllAccessible" /></th>
                        <th>Отдел</th>
                        <th>Дирекция</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var unit in Model.AccessibleUnits.Items)
                    {
                        <tr>
                            <td><input type="checkbox" name="SelectedAccessibleUnitIds" value="@unit.UnitId" /></td>
                            <td>@unit.UnitName</td>
                            <td>@unit.DepartmentName</td>
                        </tr>
                    }
                </tbody>
            </table>

            @await Html.PartialAsync("~/Views/Shared/_Pager.cshtml", Model.AccessibleUnits)

            <input type="hidden" name="userId" value="@Model.UserId" />
            <button type="submit" class="btn btn-danger mt-2">Премахни избраните</button>
            <button type="button" class="btn btn-secondary mt-2" id="selectAllAccessibleBtn">Избери всички</button>
        </form>
    </div>

    <div class="col-md-6">
        <h4>Недостъпни отдели</h4>
        <form method="get" id="FilterForm2" asp-action="MapUserUnitAccess" class="mb-2">
            <input type="hidden" name="userId" value="@Model.UserId" />

            <div class="position-relative">
                <label for="filterDepartmentInput2" class="form-label">Филтър по Дирекция:</label>
                <div class="input-group">
                    <input type="text" id="filterDepartmentInput2" class="form-control" value="@Model.FilterDepartmentDescription2" autocomplete="off">
                    <button type="button" class="btn btn-outline-danger" id="clearDepartmentBtn2">×</button>
                </div>
                <input type="hidden" id="filterDepartment2" name="filterDepartmentId2" value="@Model.FilterDepartmentId2">
                <div id="filterDepartmentResults2" class="list-group position-absolute" style="z-index:1000;"></div>
            </div>
        </form>

        <form asp-action="GrantUnitAccess" method="post">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAllInaccessible" /></th>
                        <th>Отдел</th>
                        <th>Дирекция</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var unit in Model.InaccessibleUnits.Items)
                    {
                        <tr>
                            <td><input type="checkbox" name="SelectedInaccessibleUnitIds" value="@unit.UnitId" /></td>
                            <td>@unit.UnitName</td>
                            <td>@unit.DepartmentName</td>
                        </tr>
                    }
                </tbody>
            </table>

            @await Html.PartialAsync("~/Views/Shared/_Pager.cshtml", Model.InaccessibleUnits)

            <input type="hidden" name="userId" value="@Model.UserId" />
            <button type="submit" class="btn btn-success mt-2">Добави избраните</button>
            <button type="button" class="btn btn-secondary mt-2" id="selectAllInaccessibleBtn">Избери всички</button>
        </form>
    </div>

    <a asp-controller="Access" asp-action="MapUserAccess" asp-route-userId="@Model.UserId" class="btn btn-primary m-2">
         АИС достъпи
    </a>
</div>

@section Scripts {
        <script src="~/js/wrapper-is-readonly.js" asp-append-version="true"></script>
        <script src="~/js/map-unit-access.js" asp-append-version="true"></script>
}
