@model AccessManager.ViewModels.Unit.CreateUnitViewModel

@{
    ViewData["Title"] = "Създаване на отдел";
}

<h2>Създаване на отдел</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="text-success">@TempData["Success"]</div>
}

<form asp-action="CreateUnit" asp-controller="Unit" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="DepartmentId" class="form-label">Дирекция</label>
        <input type="text" class="form-control" id="departmentInput" value="@Model.DepartmentDescription" autocomplete="off">
        <input type="hidden" asp-for="DepartmentId" id="departmentId">
        <input type="hidden" asp-for="DepartmentDescription">
        <div id="departmentResults" class="list-group position-absolute" style="z-index:1000;"></div>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UnitName" class="form-label">Име на отдел</label>
        <input asp-for="UnitName" class="form-control" placeholder="Въведете име" required />
        <span asp-validation-for="UnitName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Създай</button>
    <a asp-action="Index" class="btn btn-secondary">Отказ</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/create-unit.js" asp-append-version="true"></script>

}
