@{
    ViewData["Title"] = "Начална страница";
    var username = ViewData["Username"] as string;
    bool isLoggedIn = !string.IsNullOrEmpty(username);
    string errorMsg = "Моля, влезте в системата, за да достъпите тази страница.";
}

<div class="container" style="margin-top: 10vh; max-width: 900px;">
    <div class="row justify-content-center">
        <div class="col-12 col-md-4 mb-4">
            @if (isLoggedIn)
            {
                <a asp-controller="User" asp-action="UserList" class="text-decoration-none w-100">
                    <div class="card text-white text-center p-5 rounded shadow-lg h-100" style="background-color: darkolivegreen;">
                        <img src="~/images/users.png" alt="Page 1" class="mb-3 img-fluid" />
                        <h3 class="mb-0">Потребители</h3>
                    </div>
                </a>
            }
            else
            {
                <div class="card text-white text-center p-5 rounded shadow-lg h-100" style="background-color: darkolivegreen; cursor: not-allowed;">
                    <img src="~/images/users.png" alt="Page 1" class="mb-3 img-fluid" />
                    <h3 class="mb-0">Потребители</h3>
                    <div class="mt-2 text-danger">@errorMsg</div>
                </div>
            }
        </div>
        <div class="col-12 col-md-4 mb-4">
            @if (isLoggedIn)
            {
                <a asp-controller="Access" asp-action="AccessList" class="text-decoration-none w-100">
                    <div class="card text-white text-center p-5 rounded shadow-lg h-100" style="background-color: darkolivegreen;">
                        <img src="~/images/systems.png" alt="Page 1" class="mb-3 img-fluid" />
                        <h3 class="mb-0">Достъпи</h3>
                    </div>
                </a>
            }
            else
            {
                <div class="card text-white text-center p-5 rounded shadow-lg h-100" style="background-color: darkolivegreen; cursor: not-allowed;">
                    <img src="~/images/systems.png" alt="Page 2" class="mb-3 img-fluid" />
                    <h3 class="mb-0">Достъпи</h3>
                    <div class="mt-2 text-danger">@errorMsg</div>
                </div>
            }
        </div>
        <div class="col-12 col-md-4 mb-4">
            @if (isLoggedIn)
            {
                <a asp-controller="Log" asp-action="LogList" class="text-decoration-none w-100">
                    <div class="card text-white text-center p-5 rounded shadow-lg h-100" style="background-color: darkolivegreen;">
                        <img src="~/images/logs.png" alt="Page 1" class="mb-3 img-fluid" />
                        <h3 class="mb-0">Одити</h3>
                    </div>
                </a>
            }
            else
            {
                <div class="card text-white text-center p-5 rounded shadow-lg h-100" style="background-color: darkolivegreen; cursor: not-allowed;">
                    <img src="~/images/logs.png" alt="Page 3" class="mb-3 img-fluid" />
                    <h3 class="mb-0">Одити</h3>
                    <div class="mt-2 text-danger">@errorMsg</div>
                </div>
            }
        </div>
    </div>
</div>
