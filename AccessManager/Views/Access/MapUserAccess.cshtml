@model AccessManager.ViewModels.Access.MapUserAccessViewModel

<h2 class="text-center">@Model.FirstName @Model.LastName</h2>
<h4 class="text-center">@Model.Department - @Model.Unit</h4>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="text-success">@TempData["Success"]</div>
}

<div class="row wrapper mt-5" data-readonly="@(ViewBag.IsReadOnly != null && (bool)ViewBag.IsReadOnly ? "true" : "false")">
    <div class="col-md-6">
        <h4>Достъпни системи</h4>
        <form method="get" asp-action="MapUserAccess">
            <input type="hidden" name="userId" value="@Model.UserId" />

            <filter form-id="DirectiveFilterForm1"
                    controller="Directive"
                    action="SearchDirectives"
                    hidden-input-id="filterDirective1"
                    hidden-name="filterDirectiveId1"
                    filter-id="@Model.FilterDirectiveId1"
                    filter-description="@Model.FilterDirectiveDescription1">
            </filter>
        </form>

        <form asp-action="RevokeAccessFromUsers" method="post">
            <div class="mb-2">
                <label asp-for="DirectiveToRevokeAccess" class="form-label">Заповед за премахване на достъп</label>
                <input type="text" class="form-control" id="directiveToRevokeAccessInput" value="@Model.DirectiveToRevokeAccessDescription" autocomplete="off">
                <input type="hidden" asp-for="DirectiveToRevokeAccess" id="directiveToRevokeAccessId">
                <input type="hidden" asp-for="DirectiveToRevokeAccessDescription">
                <div id="directiveToRevokeAccessResults" class="list-group position-absolute" style="z-index:1000;"></div>
                <span asp-validation-for="DirectiveToRevokeAccess" class="text-danger"></span>
            </div>

            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAllAccessible" /></th>
                        <th>Достъп</th>
                        <th>Заповед</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var acc in Model.AccessibleSystems.Items)
                    {
                        <tr>
                            <td><input type="checkbox" name="SelectedAccessibleSystemIds" value="@acc.AccessId" /></td>
                            <td>@acc.Description</td>
                            <td>
                                <div class="position-relative">
                                    <input type="text" class="form-control directive-search"
                                           data-userid="@Model.UserId"
                                           data-accessid="@acc.AccessId"
                                           autocomplete="off"
                                           value="@acc.DirectiveDescription" />
                                    <input type="hidden" class="directive-hidden" />
                                    <div class="list-group position-absolute directive-results" style="z-index:1000;"></div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @await Html.PartialAsync("~/Views/Shared/_Pager.cshtml", Model.AccessibleSystems)

            <input type="hidden" name="userId" value="@Model.UserId" />
            <button type="submit" class="btn btn-danger mt-2">Премахни избраните</button>
            <button type="button" class="btn btn-secondary mt-2" id="selectAllAccessibleBtn">Избери всички</button>
        </form>
    </div>

    <div class="col-md-6">
        <h4>Недостъпни системи</h4>
        <form method="get" asp-action="MapUserAccess">
            <input type="hidden" name="userId" value="@Model.UserId" />

            <filter form-id="DirectiveFilterForm2"
                    controller="Directive"
                    action="SearchDirectives"
                    hidden-input-id="filterDirective2"
                    hidden-name="filterDirectiveId2"
                    filter-id="@Model.FilterDirectiveId2"
                    filter-description="@Model.FilterDirectiveDescription2">
            </filter>
        </form>

        <form asp-action="GrantAccessToUsers" method="post">
            <div class="mb-2">
                <label asp-for="DirectiveToGrantAccess" class="form-label">Заповед за даване на достъп</label>
                <input type="text" class="form-control" id="directiveToGrantAccessInput" value="@Model.DirectiveToGrantAccessDescription" autocomplete="off">
                <input type="hidden" asp-for="DirectiveToGrantAccess" id="directiveToGrantAccessId">
                <input type="hidden" asp-for="DirectiveToGrantAccessDescription">
                <div id="directiveToGrantAccessResults" class="list-group position-absolute" style="z-index:1000;"></div>
                <span asp-validation-for="DirectiveToGrantAccess" class="text-danger"></span>
            </div>

            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAllInaccessible" /></th>
                        <th>Достъп</th>
                        <th>Заповед</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var acc in Model.InaccessibleSystems.Items)
                    {
                        <tr>
                            <td><input type="checkbox" name="SelectedInaccessibleSystemIds" value="@acc.AccessId" /></td>
                            <td>@acc.Description</td>
                            <td>
                                <div class="position-relative">
                                    <input type="text" class="form-control directive-search"
                                           data-userid="@Model.UserId"
                                           data-accessid="@acc.AccessId"
                                           autocomplete="off"
                                           value="@acc.DirectiveDescription" />
                                    <input type="hidden" class="directive-hidden" />
                                    <div class="list-group position-absolute directive-results" style="z-index:1000;"></div>
                                </div>
                        </tr>
                    }
                </tbody>
            </table>

            @await Html.PartialAsync("~/Views/Shared/_Pager.cshtml", Model.InaccessibleSystems)

            <input type="hidden" name="userId" value="@Model.UserId" /> 
            <button type="submit" class="btn btn-success mt-2">Добави избраните</button>
            <button type="button" class="btn btn-secondary mt-2" id="selectAllInaccessibleBtn">Избери всички</button>
        </form>
    </div>
    <a asp-controller="Unit" asp-action="MapUserUnitAccess" asp-route-username="@Model.UserName" class="btn btn-primary m-2">
         Достъпи до отдели
    </a>
</div>

@section Scripts {
        <script src="~/js/wrapper-is-readonly.js" asp-append-version="true"></script>
        <script src="~/js/map-system-access.js" asp-append-version="true"></script>
    <script src="~/js/filter.js" asp-append-version="true"></script>
}
