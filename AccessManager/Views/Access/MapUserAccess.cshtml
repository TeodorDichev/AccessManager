@using AccessManager.Data.Enums
@model AccessManager.ViewModels.Access.MapUserAccessViewModel

<h2 class="text-center">@Model.FirstName @Model.LastName</h2>
<h4 class="text-center">@Model.Department - @Model.Unit</h4>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="text-success">@TempData["Success"]</div>
}

<form method="post" asp-action="MapUserAccess">
    <input type="hidden" name="UserId" value="@Model.UserId" />

    <div class="row mt-5">
        <!-- Accessible Systems Column -->
        <div class="col-md-6">
            <h4>Достъпни системи</h4>

            <!-- Filter directive for table 1 -->
            <div class="d-flex align-items-end mb-2 gap-2">
                <filter form-id="DirectiveFilterForm1"
                        label="Филтър по заповед"
                        controller="Directive"
                        action="SearchDirectives"
                        hidden-input-id="filterDirective1"
                        hidden-name="FilterDirectiveId1"
                        filter-id="@Model.FilterDirectiveId1"
                        filter-description="@Model.FilterDirectiveDescription1"
                        submit-on-select="false">
                </filter>

                <filter form-id="AccessFilterForm1"
                        label="Филтър по достъп"
                        controller="Access"
                        action="SearchAccesses"
                        hidden-input-id="filterAccess1"
                        hidden-name="filterAccessId1"
                        filter-id="@Model.FilterAccessId1"
                        filter-description="@Model.FilterAccessDescription1"
                        submit-on-select="false">
                </filter>

                <button type="submit" name="action1" value="Filter1" class="btn btn-secondary mt-2">
                    Приложи
                </button>
            </div>  
            
            <!-- Directive to revoke access -->
            <filter form-id="DirectiveToRevokeAccessForm"
                    label="Заповед за спиране на достъп"
                    controller="Directive"
                    action="SearchDirectives"
                    hidden-input-id="DirectiveToRevokeAccess"
                    hidden-name="DirectiveToRevokeAccessId"
                    filter-id="@Model.DirectiveToRevokeAccessId"
                    filter-description="@Model.DirectiveToRevokeAccessDescription"
                    submit-on-select="false">
            </filter>

            <table class="table table-bordered table-hover mt-3">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAllAccessible" /></th>
                        <th>Достъп</th>
                        <th>Заповед</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var acc in Model.AccessibleSystems.Items)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="SelectedAccessibleSystemIds" value="@acc.AccessId"
                                       @(Model.SelectedAccessibleSystemIds.Contains(acc.AccessId) ? "checked" : "") />
                            </td>
                            <td title="@acc.Description">@acc.Description</td>
                            <td>
                                <div class="position-relative">
                                    <input type="text" class="form-control directive-search"
                                           data-userid="@Model.UserId"
                                           data-accessid="@acc.AccessId"
                                           autocomplete="off"
                                           value="@acc.DirectiveDescription"
                                           auth="@Model.LoggedUserWriteAuthority >= AuthorityType.Full" />
                                    <input type="hidden" class="directive-hidden" name="DirectiveHidden_@acc.AccessId" value="@acc.DirectiveId" />
                                    <div class="list-group position-absolute directive-results" style="z-index:1000;"></div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @await Html.PartialAsync("~/Views/Shared/_Pager.cshtml", Model.AccessibleSystems)
            <button type="submit" name="action1" value="Revoke" class="btn btn-danger mt-2">
                Премахни избраните
            </button>
            <button type="button" class="btn btn-secondary mt-2" id="selectAllAccessibleBtn">Избери всички</button>
        </div>

        <!-- Inaccessible Systems Column -->
        <div class="col-md-6">
            <h4>Недостъпни системи</h4>

            <div class="d-flex align-items-end mb-2 gap-2">
                <!-- Filter directive for table 2 -->
                <filter form-id="DirectiveFilterForm2"
                        label="Филтър по заповед"
                        controller="Directive"
                        action="SearchDirectives"
                        hidden-input-id="filterDirective2"
                        hidden-name="FilterDirectiveId2"
                        filter-id="@Model.FilterDirectiveId2"
                        filter-description="@Model.FilterDirectiveDescription2"
                    submit-on-select="false">
                </filter>

                <filter form-id="AccessFilterForm2"
                        label="Филтър по достъп"
                        controller="Access"
                        action="SearchAccesses"
                        hidden-input-id="filterAccess2"
                        hidden-name="filterAccessId2"
                        filter-id="@Model.FilterAccessId2"
                        filter-description="@Model.FilterAccessDescription2"
                        submit-on-select="false">
                </filter>

                <button type="submit" name="action1" value="Filter2" class="btn btn-secondary mt-2">
                    Приложи
                </button>
            </div>

            <!-- Directive to grant access -->
            <filter form-id="DirectiveToGrantAccessForm"
                    label="Заповед за даване на достъп"
                    controller="Directive"
                    action="SearchDirectives"
                    hidden-input-id="DirectiveToGrantAccess"
                    hidden-name="DirectiveToGrantAccessId"
                    filter-id="@Model.DirectiveToGrantAccessId"
                    filter-description="@Model.DirectiveToGrantAccessDescription"
                    submit-on-select="false">
            </filter>

            <table class="table table-bordered table-hover mt-3">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAllInaccessible" /></th>
                        <th>Достъп</th>
                        <th>Заповед</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var acc in Model.InaccessibleSystems.Items)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="SelectedInaccessibleSystemIds" value="@acc.AccessId"
                                       @(Model.SelectedInaccessibleSystemIds.Contains(acc.AccessId) ? "checked" : "") />
                            </td>
                            <td title="@acc.Description">@acc.Description</td>
                            <td>
                                <div class="position-relative">
                                    <input type="text" class="form-control directive-search"
                                           data-userid="@Model.UserId"
                                           data-accessid="@acc.AccessId"
                                           autocomplete="off"
                                           value="@acc.DirectiveDescription"
                                           auth="@Model.LoggedUserWriteAuthority >= AuthorityType.Full" />
                                    <input type="hidden" class="directive-hidden" name="DirectiveHidden_@acc.AccessId" value="@acc.DirectiveId" />
                                    <div class="list-group position-absolute directive-results" style="z-index:1000;"></div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @await Html.PartialAsync("~/Views/Shared/_Pager.cshtml", Model.InaccessibleSystems)
            <button type="submit" name="action1" value="Grant" class="btn btn-success mt-2">
                Добави избраните
            </button>
            <button type="button" class="btn btn-secondary mt-2" id="selectAllInaccessibleBtn">Избери всички</button>
        </div>
    </div>
</form>

<div class="row">
    <a asp-controller="Unit" asp-action="MapUserUnitAccess" asp-route-userId="@Model.UserId" class="btn btn-primary m-2 ">
        Достъпи до отдели
    </a>
</div>

@section Scripts {
    <script src="~/js/map-system-access.js" asp-append-version="true"></script>
    <script src="~/js/filter.js" asp-append-version="true"></script>
    <script>
        window.SelectedAccessibleSystemIds = @Html.Raw(Json.Serialize(Model.SelectedAccessibleSystemIds))
        window.SelectedInaccessibleSystemIds = @Html.Raw(Json.Serialize(Model.SelectedInaccessibleSystemIds))
    </script>
}
