@model AccessManager.ViewModels.Access.MapUserAccessViewModel

<h2 class="text-center">@Model.FirstName @Model.LastName</h2>
<h4 class="text-center">@Model.Department - @Model.Unit</h4>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="text-success">@TempData["Success"]</div>
}

<div class="row wrapper mt-5" data-readonly="@(ViewBag.IsReadOnly != null && (bool)ViewBag.IsReadOnly ? "true" : "false")">
    <div class="col-md-6">
        <h4>Достъпни системи</h4>
        <form method="get" asp-action="MapUserAccess" class="mb-2" as>
                <input type="hidden" name="username" value="@Model.UserName" /> 

                <label for="filterDirective1" class="form-label">Филтър по заповед:</label>
                <select name="filterDirective1" id="filterDirective1" class="form-select" onchange="this.form.submit()">
                </select>
        </form>

        <form asp-action="RevokeAccessFromUsers" method="post">
            <label for="directiveToRevokeAccess" class="form-label">Заповед за спиране на достъп:</label>
            <select name="directiveToRevokeAccess" id="directiveToRevokeAccess" class="form-select mb-2">
                <option value=""></option>
            </select>

            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAllAccessible" /></th>
                        <th>Достъп</th>
                        <th>Заповед</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var acc in Model.AccessibleSystems.Items)
                    {
                        <tr>
                            <td><input type="checkbox" name="SelectedAccessibleSystemIds" value="@acc.AccessId" /></td>
                            <td>@acc.Description</td>
                            <td>
                                <select name="directiveToRevokeAccessInner" class="form-select" data-accessid="@acc.AccessId" data-username="@Model.UserName">
                                </select>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @await Html.PartialAsync("~/Views/Shared/_Pager.cshtml", Model.AccessibleSystems.Items)

            <input type="hidden" name="username" value="@Model.UserName" /> 
            <button type="submit" class="btn btn-danger mt-2">Премахни избраните</button>
            <button type="button" class="btn btn-secondary mt-2" id="selectAllAccessibleBtn">Избери всички</button>
        </form>
    </div>

    <div class="col-md-6">
        <h4>Недостъпни системи</h4>
        <form method="get" asp-action="MapUserAccess" class="mb-2">
            <input type="hidden" name="username" value="@Model.UserName" />
            
            <label for="filterDirective2" class="form-label">Филтър по заповед:</label>
            <select name="filterDirective2" id="filterDirective2" class="form-select" onchange="this.form.submit()">
            </select>
        </form>

        <form asp-action="GrantAccessToUsers" method="post">
            <label for="directiveToGrantAccess" class="form-label">Заповед за даване на достъп:</label>
            <select name="directiveToGrantAccess" id="directiveToGrantAccess" class="form-select mb-2">
            </select>

            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAllInaccessible" /></th>
                        <th>Достъп</th>
                        <th>Заповед</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var acc in Model.InaccessibleSystems.Items)
                    {
                        <tr>
                            <td><input type="checkbox" name="SelectedInaccessibleSystemIds" value="@acc.AccessId" /></td>
                            <td>@acc.Description</td>
                            <td>
                                @if(acc.DirectiveId != Guid.Empty && acc.DirectiveDescription != "") 
                                {
                                    <select name="directiveToGrantAccessInner" id="directiveToGrantAccessInner" class="form-select" data-accessid="@acc.AccessId" data-username="@Model.UserName">
                                    </select>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @await Html.PartialAsync("~/Views/Shared/_Pager.cshtml", Model.InaccessibleSystems.Items)

            <input type="hidden" name="username" value="@Model.UserName" /> 
            <button type="submit" class="btn btn-success mt-2">Добави избраните</button>
            <button type="button" class="btn btn-secondary mt-2" id="selectAllInaccessibleBtn">Избери всички</button>
        </form>
    </div>
    <a asp-controller="Unit" asp-action="MapUserUnitAccess" asp-route-username="@Model.UserName" class="btn btn-primary m-2">
         Достъпи до отдели
    </a>
</div>

@section Scripts {
        <script src="~/js/wrapper-is-readonly.js" asp-append-version="true"></script>
        <script src="~/js/map-system-access.js" asp-append-version="true"></script>
}
