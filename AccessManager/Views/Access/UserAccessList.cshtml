@using AccessManager.Data.Enums
@using AccessManager.Utills
@using AccessManager.ViewModels.Access
@model UserAccessListViewModel

@{
    ViewData["Title"] = "Потребители и достъпи";
}

<h2>Потребители</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="text-success">@TempData["Success"]</div>
}

<form style="display:none;">
    @Html.AntiForgeryToken()
</form>

<form method="get">
    <div class="mb-3 d-flex align-items-end gap-3">
        <filter form-id="AccessFilterForm"
                label="Филтър по достъп"
                controller="Access"
                action="SearchAccesses"
                hidden-input-id="filterAccess"
                hidden-name="filterAccessId"
                filter-id="@Model.FilterAccessId"
                filter-description="@Model.FilterAccessDescription">
        </filter>

        <filter form-id="UserNameFilterForm"
                label="Филтър по потребителско име"
                controller="User"
                action="SearchUsers"
                hidden-input-id="filterUser"
                hidden-name="filterUserId"
                filter-id="@Model.FilterUserId"
                filter-description="@Model.FilterUserName">
        </filter>

        <filter form-id="DirectiveFilterForm"
            label="Филтър по заповед"
            controller="Directive"
            action="SearchDirectives"
            hidden-input-id="filterDirective"
            hidden-name="filterDirectiveId"
            filter-id="@Model.FilterDirectiveId"
            filter-description="@Model.FilterDirectiveDescription">
        </filter>

        <div>
            <a asp-controller="File" asp-action="UserAccessCsv" class="btn btn-primary" auth="@Model.LoggedUserReadAuthority >= AuthorityType.Restricted">
                Експортирай CSV
            </a>
        </div>
    </div>

    <div>
        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>Потребителско име</th>
                    <th>Собствено име</th>
                    <th>Фамилия</th>
                    <th>Служба</th>
                    <th>Дирекция</th>
                    <th>Отдел</th>
                    <th>Достъп за писане</th>
                    <th>Достъп за четене</th>
                    <th>Описание на достъп</th>
                    <th>Заповед за даване на достъпа</th>
                    <th>Заповед за премахване на достъпа</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ua in Model.UserAccessList.Items)
                {
                    <tr>
                        <td>@ua.UserName</td>
                        <td>@ua.FirstName</td>
                        <td>@ua.LastName</td>
                        <td>@ua.Position</td>
                        <td>@ua.Department</td>
                        <td>@ua.Unit</td>
                        <td>@BulgarianLocalization.GetBulgarianAuthorityType(ua.WriteAccess)</td>
                        <td>@BulgarianLocalization.GetBulgarianAuthorityType(ua.ReadAccess)</td>
                        <td>@ua.AccessDescription</td>
                        <td>@ua.GrantDirectiveDescription</td>
                        <td>@ua.RevokeDirectiveDescription</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @await Html.PartialAsync("~/Views/Shared/_Pager.cshtml", Model.UserAccessList)
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/filter.js" asp-append-version="true"></script>
}
