@model AccessManager.ViewModels.Access.AccessListViewModel

@{
    ViewData["Title"] = "Достъпи";
}

<form style="display:none;">
    @Html.AntiForgeryToken()
</form>

<h2>Достъпи</h2>

<div class="d-flex justify-content-start gap-2 mb-3">
    @if (Model.WriteAuthority >= AccessManager.Data.Enums.AuthorityType.Full)
    {
        <a asp-controller="Access" asp-action="CreateNewAccess" class="btn btn-success">
            Добави нов достъп
        </a>
        <a asp-controller="Directive" asp-action="CreateNewDirective" class="btn btn-success">
            Добави нова заповед
        </a>
    }
    @if (Model.WriteAuthority >= AccessManager.Data.Enums.AuthorityType.SuperAdmin)
    {
        <form asp-controller="Access" asp-action="HardDeleteAccesses" method="post" onsubmit="return confirm('Наистина ли искате да изтриете всички деактивирани достъпи?');">
            <button type="submit" class="btn btn-danger">
                Изтрий всички деактивирани достъпи
            </button>
        </form>

        <a asp-controller="User" asp-action="ViewDeactivatedAccesses" class="btn btn-primary">
            Виж изтритите достъпи
        </a>
    }
</div>


<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Име</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var access in Model.Accesses)
        {
            <tr>
                <td>@access.Description</td>
                @if (Model.WriteAuthority >= AccessManager.Data.Enums.AuthorityType.Restricted)
                {
                    <td>
                        <a asp-controller="Access" asp-action="EditAccess" asp-route-id="@access.AccessId" class="btn btn-sm btn-info">
                            Редактирай
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Access" asp-action="MapUsers" asp-route-id="@access.AccessId" class="btn btn-sm btn-primary">
                            Потребители
                        </a>
                    </td>
                    <td>
                        <form asp-controller="Access" asp-action="SoftDeleteAccess" method="post" asp-route-id="@access.AccessId">
                            <button type="submit" class="btn btn-danger me-2">
                                Изтрий
                            </button>
                        </form>
                    </td>

                }
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center mt-4">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?page=@i">@i</a>
                </li>
            }
        </ul>
    </nav>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/soft-delete-access.js" asp-append-version="true"></script>
}
