@using AccessManager.Data.Enums
@model AccessManager.ViewModels.Access.EditAccessViewModel

<h2 class="text-center">@Model.Description</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="text-success">@TempData["Success"]</div>
}

<div class="mb-2 d-flex align-items-end gap-2">
    <div class="flex-grow-1">
        <label for="accessNameInput" class="form-label">Ново име</label>
        <input type="text"
               id="accessNameInput"
               class="form-control"
               value="@Model.Name"
               data-access-id="@Model.AccessId"
               auth="@Model.LoggedUserWriteAuthority >= AuthorityType.Full" />
    </div>

    <a asp-action="CreateAccess"
       asp-route-parentAccessId="@Model.AccessId"
       class="btn btn-primary mb-0 align-self-end">
        Създай поддостъп
    </a>
</div>

<form method="post" asp-action="EditAccess">
    <input type="hidden" name="AccessId" value="@Model.AccessId" />

    <div class="row mt-5">
        <div class="col-md-6">
            <h4>Потребители с достъп</h4>
        
            <div class="d-flex align-items-end mb-2 gap-2">
                <filter form-id="DirectiveFilterForm1"
                        label="Филтър по заповед"
                        controller="Directive"
                        action="SearchDirectives"
                        hidden-input-id="filterDirective1"
                        hidden-name="FilterDirectiveId1"
                        filter-id="@Model.FilterDirectiveId1"
                        filter-description="@Model.FilterDirectiveDescription1"
                        submit-on-select="false">
                </filter>

                <button type="submit" name="action1" value="Filter1" class="btn btn-secondary mt-2">
                    Приложи
                </button>
            </div>

            <div class="mb-2" auth="@Model.LoggedUserWriteAuthority >= AuthorityType.Full">
                <filter form-id="DirectiveToRevokeAccessForm"
                        label="Заповед за спиране на достъп"
                        controller="Directive"
                        action="SearchDirectives"
                        hidden-input-id="DirectiveToRevokeAccess"
                        hidden-name="directiveToRevokeAccessId"
                        filter-id="@Model.DirectiveToRevokeAccessId"
                        filter-description="@Model.DirectiveToRevokeAccessDescription"
                        submit-on-select="false">
                </filter>
            </div>

            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAllWithAccess" /></th>
                        <th>Потребител</th>
                        <th>Служба</th>
                        <th>Отдел</th>
                        <th>Заповед</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.UsersWithAccess.Items)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="SelectedUsersWithAccessIds" value="@user.UserId"
                                       @(Model.SelectedUsersWithAccessIds.Contains(user.UserId) ? "checked" : "") />
                            </td>
                            <td>@user.FirstName @user.LastName (@user.UserName)</td>
                            <td>@user.Position</td>
                            <td>@user.Department - @user.Unit</td>
                            <td>
                                <div class="position-relative">
                                    <input type="text" class="form-control directive-search"
                                           data-userid="@user.UserId"
                                           data-accessid="@Model.AccessId"
                                           autocomplete="off" 
                                           value="@user.DirectiveDescription"
                                           auth="@Model.LoggedUserWriteAuthority >= AuthorityType.Full" />
                                    <input type="hidden" class="directive-hidden" />
                                    <div class="list-group position-absolute directive-results" style="z-index:1000;"></div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @await Html.PartialAsync("~/Views/Shared/_Pager.cshtml", Model.UsersWithAccess)

            <button type="submit" class="btn btn-danger mt-2" auth="@Model.LoggedUserWriteAuthority >= AuthorityType.Restricted" name="action1" value="Revoke">
                Премахни избраните
            </button>
            <button type="button" class="btn btn-secondary mt-2" id="selectAllWithAccessBtn">Избери всички</button>
        </div>

        <div class="col-md-6">
        <h4>Потребители без достъп</h4>

            <div class="d-flex align-items-end mb-2 gap-2">
                <filter form-id="DirectiveFilterForm2"
                        label="Филтър по заповед"
                        controller="Directive"
                        action="SearchDirectives"
                        hidden-input-id="filterDirective2"
                        hidden-name="FilterDirectiveId2"
                        filter-id="@Model.FilterDirectiveId1"
                        filter-description="@Model.FilterDirectiveDescription2"
                        submit-on-select="false">
                </filter>

                <button type="submit" name="action1" value="Filter2" class="btn btn-secondary mt-2">
                    Приложи
                </button>
            </div> 

            <div class="mb-2" auth="@Model.LoggedUserWriteAuthority >= AuthorityType.Full">
                <filter 
                    form-id="DirectiveToGrantAccessForm"
                        label="Заповед за даване на достъп"
                        controller="Directive"
                        action="SearchDirectives"
                        hidden-input-id="DirectiveToGrantAccess"
                        hidden-name="directiveToGrantAccessId"
                        filter-id="@Model.DirectiveToGrantAccessId"
                        filter-description="@Model.DirectiveToGrantAccessDescription"
                        submit-on-select="false">
                </filter>
            </div>

            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAllWithoutAccess" /></th>
                        <th>Потребител</th>
                        <th>Служба</th>
                        <th>Отдел</th>
                        <th>Заповед</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.UsersWithoutAccess.Items)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="SelectedUsersWithoutAccessIds" value="@user.UserId"
                                       @(Model.SelectedUsersWithoutAccessIds.Contains(user.UserId) ? "checked" : "") />
                            </td>
                            <td title="@user.FirstName @user.LastName (@user.UserName)">@user.FirstName @user.LastName (@user.UserName)</td>
                            <td title="@user.Position">@user.Position</td>
                            <td title="@user.Department - @user.Unit">@user.Department - @user.Unit</td>
                            <td>
                                <div class="position-relative">
                                    <input type="text" class="form-control directive-search"
                                           data-userid="@user.UserId"
                                           data-accessid="@Model.AccessId"
                                           autocomplete="off" 
                                           value="@user.DirectiveDescription"
                                           auth="@Model.LoggedUserWriteAuthority >= AuthorityType.Full" />
                                    <input type="hidden" class="directive-hidden" />
                                    <div class="list-group position-absolute directive-results" style="z-index:1000;"></div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @await Html.PartialAsync("~/Views/Shared/_Pager.cshtml", Model.UsersWithoutAccess)

            <button type="submit" class="btn btn-success mt-2" auth="@Model.LoggedUserWriteAuthority >= AuthorityType.Restricted" name="action1" value="Grant">
                Добави избраните
            </button>
            <button type="button" class="btn btn-secondary mt-2" id="selectAllWithoutAccessBtn">Избери всички</button>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/js/edit-access.js" asp-append-version="true"></script>
    <script src="~/js/filter.js" asp-append-version="true"></script>
    <script>
        // preserve selection state
        window.SelectedUsersWithAccessIds = @Html.Raw(Json.Serialize(Model.SelectedUsersWithAccessIds));
        window.SelectedUsersWithoutAccessIds = @Html.Raw(Json.Serialize(Model.SelectedUsersWithoutAccessIds));

        // handle rename via AJAX
        const accessNameInput = document.getElementById('accessNameInput');
        if (accessNameInput) {
            accessNameInput.addEventListener('change', async function () {
                const newName = this.value.trim();
                const accessId = this.dataset.accessId;

                if (!newName) return;

                try {
                    const response = await fetch('@Url.Action("EditAccessName", "Access")', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                        body: new URLSearchParams({
                            accessId: accessId,
                            name: newName
                        })
                    });

                    if (response.ok) {
                        console.log('Access name updated successfully.');
                    } else {
                        alert('Грешка при промяна на името.');
                    }
                } catch (err) {
                    console.error(err);
                    alert('Грешка при комуникация със сървъра.');
                }
            });
        }
    </script>
}
