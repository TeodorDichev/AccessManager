@model AccessManager.ViewModels.Access.EditAccessViewModel

<h2 class="text-center">@Model.Description</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="text-success">@TempData["Success"]</div>
}

<div class="row wrapper mb-2" data-readonly="@(ViewBag.IsReadOnly != null && (bool)ViewBag.IsReadOnly ? "true" : "false")">
    <form method="post" asp-action="EditAccessName" class="mb-2">
      <input type="hidden" name="accessId" value="@Model.AccessId" /> 
      <label asp-for="Name" class="form-label">Ново име</label>
      <input asp-for="Name" class="form-control" onchange="this.form.submit()"/>
    </form>
</div>

<div class="row wrapper mt-5" data-readonly="@(ViewBag.IsReadOnly != null && (bool)ViewBag.IsReadOnly ? "true" : "false")">
    <div class="col-md-6">
        <h4>Потребители с достъп</h4>

        <form method="get" id="FilterForm1" asp-action="EditAccess" class="mb-2">
            <input type="hidden" name="accessId" value="@Model.AccessId" />

            <div class="position-relative">
                <label for="filterDirectiveInput1" class="form-label">Филтър по заповед:</label>
                <div class="input-group">
                    <input type="text" id="filterDirectiveInput1" class="form-control" value="@Model.FilterDirectiveDescription1" autocomplete="off">
                    <button type="button" class="btn btn-sm btn-outline-danger" id="clearDirectiveBtn1">×</button>
                </div>
                <input type="hidden" id="filterDirective1" name="filterDirectiveId1" value="@Model.FilterDirectiveId2">
                <div id="filterDirectiveResults1" class="list-group position-absolute" style="z-index:1000;"></div>
            </div>
        </form>

        <form asp-action="RevokeUserAccess" method="post">
            <div class="mb-2">
                <label asp-for="DirectiveToRevokeAccess" class="form-label">Заповед за премахване на достъп</label>
                <input type="text" class="form-control" id="directiveToRevokeAccessInput" value="@Model.DirectiveToRevokeAccessDescription" autocomplete="off">
                <input type="hidden" asp-for="DirectiveToRevokeAccess" id="directiveToRevokeAccessId">
                <input type="hidden" asp-for="DirectiveToRevokeAccessDescription">
                <div id="directiveToRevokeAccessResults" class="list-group position-absolute" style="z-index:1000;"></div>
                <span asp-validation-for="DirectiveToRevokeAccess" class="text-danger"></span>
            </div>
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAllWithAccess" /></th>
                        <th>Потребител</th>
                        <th>Отдел</th>
                        <th>Заповед</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.UsersWithAccess.Items)
                    {
                        <tr>
                            <td> <input type="checkbox" name="SelectedUsersWithAccessIds" value="@user.UserId" /> </td>
                            <td>@user.FirstName @user.LastName (@user.UserName)</td>
                            <td>@user.Department - @user.Unit</td>
                            <td>
                                <div class="position-relative">
                                    <input type="text" class="form-control directive-search"
                                           data-userid="@user.UserId"
                                           data-accessid="@Model.AccessId"
                                           autocomplete="off" 
                                           value="@user.DirectiveDescription"/>
                                    <input type="hidden" class="directive-hidden" />
                                    <div class="list-group position-absolute directive-results" style="z-index:1000;"></div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @await Html.PartialAsync("~/Views/Shared/_Pager.cshtml", Model.UsersWithAccess)

            <input type="hidden" name="accessId" value="@Model.AccessId" /> 
            <button type="submit" class="btn btn-danger mt-2">Премахни избраните</button>
            <button type="button" class="btn btn-secondary mt-2" id="selectAllWithAccessBtn">Избери всички</button>
        </form>
    </div>

    <div class="col-md-6">
        <h4>Потребители без достъп</h4>

        <form method="get" id="FilterForm2" asp-action="EditAccess" class="mb-2">
            <input type="hidden" name="accessId" value="@Model.AccessId" />

            <div class="position-relative">
                <label for="filterDirectiveInput2" class="form-label">Филтър по заповед:</label>
                <div class="input-group">
                    <input type="text" id="filterDirectiveInput2" class="form-control" value="@Model.FilterDirectiveDescription2" autocomplete="off">
                    <button type="button" class="btn btn-sm btn-outline-danger" id="clearDirectiveBtn2">×</button>
                </div>
                <input type="hidden" id="filterDirective2" name="filterDirectiveId2" value="@Model.FilterDirectiveId2">
                <div id="filterDirectiveResults2" class="list-group position-absolute" style="z-index:1000;"></div>
            </div>
        </form>

        <form asp-controller="Access" asp-action="GrantUserAccess" method="post">
            <div class="mb-2">
                <label asp-for="DirectiveToGrantAccess" class="form-label">Заповед за даване на достъп</label>
                <input type="text" class="form-control" id="directiveToGrantAccessInput" value="@Model.DirectiveToGrantAccessDescription" autocomplete="off">
                <input type="hidden" asp-for="DirectiveToGrantAccess" id="directiveToGrantAccessId">
                <input type="hidden" asp-for="DirectiveToGrantAccessDescription">
                <div id="directiveToGrantAccessResults" class="list-group position-absolute" style="z-index:1000;"></div>
                <span asp-validation-for="DirectiveToGrantAccess" class="text-danger"></span>

            </div>

            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAllWithoutAccess" /></th>
                        <th>Потребител</th>
                        <th>Отдел</th>
                        <th>Заповед</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.UsersWithoutAccess.Items)
                    {
                        <tr>
                            <td> <input type="checkbox" name="SelectedUsersWithoutAccessIds" value="@user.UserId" /> </td>
                            <td>@user.FirstName @user.LastName (@user.UserName)</td>
                            <td>@user.Department - @user.Unit</td>
                            <td>
                                <div class="position-relative">
                                    <input type="text" class="form-control directive-search"
                                           data-userid="@user.UserId"
                                           data-accessid="@Model.AccessId"
                                           autocomplete="off" 
                                           value="@user.DirectiveDescription" />
                                    <input type="hidden" class="directive-hidden" />
                                    <div class="list-group position-absolute directive-results" style="z-index:1000;"></div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @await Html.PartialAsync("~/Views/Shared/_Pager.cshtml", Model.UsersWithoutAccess)

            <input type="hidden" name="accessId" value="@Model.AccessId" /> 
            <button type="submit" class="btn btn-success mt-2">Добави избраните</button>
            <button type="button" class="btn btn-secondary mt-2" id="selectAllWithoutAccessBtn">Избери всички</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/edit-access.js" asp-append-version="true"></script>
    <script src="~/js/wrapper-is-readonly.js" asp-append-version="true"></script>
}
