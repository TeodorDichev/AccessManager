@model AccessManager.ViewModels.Access.CreateAccessViewModel
@{
    ViewData["Title"] = "Създай достъп";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="text-success">@TempData["Success"]</div>
}

<form asp-action="Create" method="post" id="createAccessForm">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Име на достъпа</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3 row">
        <div class="col-md-4">
            <label class="form-label">Ниво (depth)</label>
            <select asp-for="Level" id="LevelSelect" class="form-select">
                <option value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
        </div>

        <div class="col-md-8 position-relative">
            <label class="form-label">Родителски достъп (ако има)</label>

            <input type="text" id="ParentSearch" class="form-control" placeholder="Избор на родител" autocomplete="off" />
            <input type="hidden" asp-for="ParentAccessId" id="ParentAccessId" />
            <div id="parentCandidates" class="list-group dropdown-results"></div>
            <span asp-validation-for="ParentAccessId" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Създай</button>
        <a asp-action="AccessList" class="btn btn-secondary ms-2">Откажи</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/access-create.js" asp-append-version="true"></script>
}
