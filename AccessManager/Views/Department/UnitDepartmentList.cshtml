@model AccessManager.ViewModels.Department.UnitDepartmentListViewModel

@{
    ViewData["Title"] = "Дирекции";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="text-success">@TempData["Success"]</div>
}

<form style="display:none;">
    @Html.AntiForgeryToken()
</form>

<h2>Дирекции и отдели</h2>

<form method="get" class="mb-3 d-flex align-items-end gap-3">
    <div class="d-flex justify-content-start gap-2 mb-3 align-items-end">
        <label for="filterDepartment" class="form-label">Филтър по Дирекция:</label>
        <select name="filterDepartment" id="filterDepartment" class="form-select" onchange="this.form.submit()">
        </select>
    </div>

    <div class="d-flex justify-content-start gap-2 mb-3 align-items-end">
        @if (Model.WriteAuthority >= AccessManager.Data.Enums.AuthorityType.Full)
        {
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createDepartmentModal">
                Добави новa дирекция
            </button>
            <a asp-controller="Unit" asp-action="CreateUnit" class="btn btn-success">
                Добави нов отдел
            </a>
            <a asp-controller="File" asp-action="UnitsCsv" class="btn btn-primary">
                Експортирай CSV
            </a>
        }
        @if (Model.WriteAuthority >= AccessManager.Data.Enums.AuthorityType.SuperAdmin)
        {
            <a asp-controller="Department" asp-action="DeletedUnitDepartments" class="btn btn-danger">
                Виж изтритите отдели
            </a>
        }
    </div>
</form>

<table class="table table-bordered table-striped wrapper" data-readonly="@(ViewBag.IsReadOnly != null && (bool)ViewBag.IsReadOnly ? "true" : "false")">
    <thead class="table-light">
        <tr>
            <th>Дирекция</th>
            <th>Отдел</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ud in Model.UnitDepartments.Items)
        {
            <tr>
                <td>@ud.DepartmentName</td>
                <td>@ud.UnitName</td>
                @if (ud.UnitId == null)
                {
                    <td
                        ><a asp-controller="Department" asp-action="EditDepartment" asp-route-id="@ud.DepartmentId" class="btn btn-sm btn-info">
                        Редактирай
                        </a>
                    </td>
                    <td>
                        <form asp-controller="Department" asp-action="SoftDeleteDepartment" method="post" asp-route-departmentid="@ud.DepartmentId">
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Изтриваенето на дирекция изтрива: всички нейни отдели, всички служители от тези отдели, всички достъпи на служители до тези отдели'">
                                Изтрий
                            </button>
                        </form>
                    </td>
                }
                else
                {
                    <td>
                        <a asp-controller="Unit" asp-action="EditUnit" asp-route-id="@ud.UnitId" class="btn btn-sm btn-info">
                            Редактирай
                        </a>
                    </td>
                    <td>
                        <form asp-controller="Unit" asp-action="SoftDeleteUnit" method="post" asp-route-unitid="@ud.UnitId">
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Изтриваенето на отдел изтрива: всички служители от този отдели, всички достъпи на служители до този отдели'">
                                Изтрий
                            </button>
                        </form>
                    </td>
                }

            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("~/Views/Shared/_Pager.cshtml", Model.UnitDepartments)

<!-- Modal -->
<div class="modal fade" id="createDepartmentModal" tabindex="-1" aria-labelledby="createDepartmentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createDepartmentModalLabel">Нова дирекция</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Затвори"></button>
            </div>
            <form asp-controller="Department" asp-action="CreateNewDepartment" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="DepartmentName" class="form-label">Име на дирекция</label>
                        <input type="text" name="DepartmentName" id="DepartmentName" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Откажи</button>
                    <button type="submit" class="btn btn-success">Запази</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/wrapper-is-readonly.js" asp-append-version="true"></script>
}
