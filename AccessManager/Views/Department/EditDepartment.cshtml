@using AccessManager.Data.Enums
@model AccessManager.ViewModels.Department.DepartmentEditViewModel
@{
    ViewData["Title"] = $"{Model.DepartmentName}";
}

<h2 class="text-center fw-bold">@ViewData["Title"]</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="text-success">@TempData["Success"]</div>
}

<div class="d-flex align-items-bottom">
    <form asp-action="EditDepartment" method="post" class="wrapper m-3" data-readonly="@(ViewBag.IsReadOnly != null && (bool)ViewBag.IsReadOnly ? "true" : "false")">
        <div class="p-0">
            <label asp-for="DepartmentName" class="form-label">Име</label>
            <input asp-for="DepartmentName" class="form-control" />
            <span asp-validation-for="DepartmentName" class="text-danger"></span>
        </div>
        @*sending the rest of the model so it does not leave null fields*@
        <input asp-for="DepartmentId" type="hidden" />
        <input asp-for="Units" type="hidden" />
        <input asp-for="DepartmentName" type="hidden" />
        <input asp-for="WriteAuthority" type="hidden" />
    </form>
    <a asp-controller="Unit" asp-action="CreateUnit" asp-route-departmentId="@Model.DepartmentId" class="btn btn-primary m-3">
        Добави нов отдел
    </a>
</div>

<hr />
<h4>Отдели</h4>
<div style="max-height: 200px; overflow-y: auto;" class="wrapper" data-readonly="@(ViewBag.IsReadOnly != null && (bool)ViewBag.IsReadOnly ? "true" : "false")">
    <table class="table table-sm table-bordered">
        <thead class="table-light">
            <tr>
                <th>Име</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var unit in Model.Units.Items)
            {
                <tr>
                    <td>@unit.UnitName</td>
                    <td>
                        <form asp-controller="Unit" asp-action="SoftDeleteUnit" method="post">
                            <button type="submit" class="btn btn-danger">
                                Изтрий
                            </button>
                        </form>
                    </td>
                    <td>
                        <a asp-controller="Unit" asp-action="EditUnit" asp-route-id="@unit.UnitId" class="btn btn-primary">
                            Редактирай
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @await Html.PartialAsync("~/Views/Shared/_Pager.cshtml", Model.Units)
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/wrapper-is-readonly.js" asp-append-version="true"></script>
}