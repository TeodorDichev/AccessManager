@model AccessManager.ViewModels.User.CreateUserViewModel
@using AccessManager.Data.Enums
@using AccessManager.Utills
@{
    ViewData["Title"] = "Добави потребител";
}

<h2 class="mb-4">Добави потребител</h2>

<form asp-action="CreateUser" method="post">

    <div class="row mb-3">
        <div class="col-md-4">
            <label asp-for="UserName" class="form-label">Потребителско име</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="FirstName" class="form-label">Име</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="MiddleName" class="form-label">Презиме</label>
            <input asp-for="MiddleName" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label asp-for="LastName" class="form-label">Фамилия</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="EGN" class="form-label">ЕГН</label>
            <input asp-for="EGN" class="form-control" />
            <span asp-validation-for="EGN" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Phone" class="form-label">Телефон</label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="SelectedDepartmentId" class="form-label">Дирекция</label>
            <span asp-validation-for="SelectedDepartmentId" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="SelectedUnitId" class="form-label">Отдел</label>
            <span asp-validation-for="SelectedUnitId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="SelectedReadingAccess" class="form-label">Достъп за четене</label>
            <select asp-for="SelectedReadingAccess" class="form-select" id="SelectedReadingAccess">
                @foreach (AuthorityType level in Enum.GetValues(typeof(AuthorityType)))
                {
                    <option value="@((int)level)">@BulgarianLocalization.GetBulgarianAuthorityType(level)</option>
                }
            </select>
            <span asp-validation-for="SelectedReadingAccess" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="SelectedWritingAccess" class="form-label">Достъп за писане</label>
            <select asp-for="SelectedWritingAccess" class="form-select" id="SelectedWritingAccess">
                @foreach (AuthorityType level in Enum.GetValues(typeof(AuthorityType)))
                {
                    <option value="@((int)level)">@BulgarianLocalization.GetBulgarianAuthorityType(level)</option>
                }
            </select>
            <span asp-validation-for="SelectedWritingAccess" class="text-danger"></span>
        </div>
    </div>

    <div class="form-outline form-white mb-3" id="password-container">
        <label asp-for="Password" class="form-label">Парола</label>
        <div class="position-relative d-flex align-items-center">
            <input asp-for="Password" type="password" class="form-control pe-5" id="PasswordInput" />
            <button type="button"
                    class="btn btn-link p-0 border-0 position-absolute end-0 me-3 d-flex align-items-center"
                    onclick="togglePasswordVisibility('PasswordInput', this)"
                    style="top: 50%; transform: translateY(-50%); box-shadow: none;">
                <i class="bi bi-eye fs-5" id="PasswordIcon"></i>
            </button>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    
    <form asp-action="CreateUser" method="post">
        <div class="d-flex justify-content-center align-items-center mt-4 gap-3">
            <button type="submit" name="redirectTo" value="UserList" class="btn btn-primary px-5">
                Създай потребител
            </button>
            <button type="submit" name="redirectTo" value="MapUserAccess" class="btn btn-primary px-5">
                Дай АИС достъпи
            </button>
            <button type="submit" name="redirectTo" value="MapUserUnitAccess" class="btn btn-primary px-5">
                Дай достъпи до отдели
            </button>
        </div>
    </form>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/password-visibility-toggle.js" asp-append-version="true"></script>
    <script src="~/js/access-visibility.js" asp-append-version="true"></script>
    <script src="~/js/unit-dropdown-load.js" asp-append-version="true"></script>
    <script src="~/js/sync-authority-type-access.js" asp-append-version="true"></script>
}
