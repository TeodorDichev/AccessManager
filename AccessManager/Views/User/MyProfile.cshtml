@using AccessManager.Data.Enums
@using AccessManager.Utills
@model AccessManager.ViewModels.User.MyProfileViewModel

@{
    ViewData["Title"] = "Моят профил";
}

<h2 class="text-center fw-bold">Моят профил</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="text-success">@TempData["Success"]</div>
}

<form asp-action="MyProfile" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">Първо име</label>
                <input asp-for="FirstName" class="form-control" auth="@Model.LoggedUserWriteAuthority >= AuthorityType.SuperAdmin" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MiddleName" class="form-label">Второ име</label>
                <input asp-for="MiddleName" class="form-control" auth="@Model.LoggedUserWriteAuthority >= AuthorityType.SuperAdmin" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Фамилия</label>
                <input asp-for="LastName" class="form-control" auth="@Model.LoggedUserWriteAuthority >= AuthorityType.SuperAdmin" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EGN" class="form-label">ЕГН</label>
                <span asp-validation-for="EGN" class="text-danger"></span>
                <input asp-for="EGN" class="form-control" auth="@Model.LoggedUserWriteAuthority >= AuthorityType.Restricted" />
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label">Телефонен номер</label>
                <input asp-for="Phone" class="form-control" auth="@Model.LoggedUserWriteAuthority >= AuthorityType.Restricted" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="UserName" class="form-label">Потребителско име</label>
                <input asp-for="UserName" class="form-control" auth="@Model.LoggedUserWriteAuthority >= AuthorityType.SuperAdmin" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SelectedPositionId" class="form-label">Служба</label>
                <input type="text" class="form-control" id="positionInput" value="@Model.SelectedPositionDescription" autocomplete="off" auth="@Model.LoggedUserWriteAuthority >= AuthorityType.SuperAdmin" />
                <input type="hidden" asp-for="SelectedPositionId" id="SelectedPositionId">
                <input type="hidden" asp-for="SelectedPositionDescription">
                <div id="positionResults" class="list-group position-absolute" style="z-index:1000;"></div>
                <span asp-validation-for="SelectedPositionId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SelectedDepartmentId" class="form-label">Дирекция</label>
                <input type="text" class="form-control" id="departmentInput" value="@Model.SelectedDepartmentDescription" autocomplete="off" auth="@Model.LoggedUserWriteAuthority >= AuthorityType.SuperAdmin"/>
                <input type="hidden" asp-for="SelectedDepartmentId" id="SelectedDepartmentId">
                <input type="hidden" asp-for="SelectedDepartmentDescription">
                <div id="departmentResults" class="list-group position-absolute" style="z-index:1000;"></div>
                <span asp-validation-for="SelectedDepartmentId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SelectedUnitId" class="form-label">Отдел</label>
                <input type="text" class="form-control" id="unitInput" value="@Model.SelectedUnitDescription" autocomplete="off" auth="@Model.LoggedUserWriteAuthority >= AuthorityType.SuperAdmin"/>
                <input type="hidden" asp-for="SelectedUnitId" id="SelectedUnitId">
                <input type="hidden" asp-for="SelectedUnitDescription">
                <div id="unitResults" class="list-group position-absolute" style="z-index:1000;"></div>
                <span asp-validation-for="SelectedUnitId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Достъп за четене</label>
                <input class="form-control" value="@BulgarianLocalization.GetBulgarianAuthorityType(Model.ReadingAccess)" auth="@Model.LoggedUserWriteAuthority >= AuthorityType.SuperAdmin" />
                <input type="hidden" asp-for="ReadingAccess" />
            </div>

            <div class="mb-3">
                <label class="form-label">Достъп за писане</label>
                <input class="form-control" value="@BulgarianLocalization.GetBulgarianAuthorityType(Model.WritingAccess)" auth="@Model.LoggedUserWriteAuthority >= AuthorityType.SuperAdmin" />
                <input type="hidden" asp-for="WritingAccess" />
            </div>
        </div>
    </div>
    <hr />

    <h4>Смяна на парола</h4>
    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Стара парола</label>
            <div class="position-relative d-flex align-items-center">
                <input id="OldPasswordInput" name="OldPassword" type="password" class="form-control pe-5" />
                <button type="button"
                        class="btn btn-link p-0 border-0 position-absolute end-0 me-3 d-flex align-items-center"
                        onclick="togglePasswordVisibility('OldPasswordInput', this)"
                        style="top: 50%; transform: translateY(-50%); box-shadow: none;">
                    <i class="bi bi-eye fs-5" id="PasswordIcon"></i>
                </button>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Нова парола</label>
            <div class="position-relative d-flex align-items-center">
                <input id="NewPasswordInput" name="NewPassword" type="password" class="form-control pe-5" />
                <button type="button"
                        class="btn btn-link p-0 border-0 position-absolute end-0 me-3 d-flex align-items-center"
                        onclick="togglePasswordVisibility('NewPasswordInput', this)"
                        style="top: 50%; transform: translateY(-50%); box-shadow: none;">
                    <i class="bi bi-eye fs-5" id="PasswordIcon"></i>
                </button>
            </div>
        </div>
    </div>

    <div class="d-grid mb-4">
        <button type="submit" class="btn btn-primary btn-lg">Запази</button>
    </div>
</form>

<hr />

<div class="row mt-5">
    <div class="col-md-6">
        <h4>Достъпни отдели</h4>
        <div id="accessibleUnitsContainer"></div>
    </div>

    <div class="col-md-6">
        <h4>Получени достъпи</h4>
        <div id="userAccessesContainer"></div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/my-profile.js" asp-append-version="true"></script>
    <script src="~/js/password-visibility-toggle.js" asp-append-version="true"></script>
}
