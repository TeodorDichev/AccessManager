@using AccessManager.Utills
@using AccessManager.ViewModels
@using AccessManager.ViewModels.User
@using AccessManager.Data.Enums
@model UserListViewModel

@{
    ViewData["Title"] = "Потребители";
}

<h2>Потребители</h2>

<form style="display:none;">
    @Html.AntiForgeryToken()
</form>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="text-success">@TempData["Success"]</div>
}

<form id="usersFilterForm" action="/User/UserList" method="get" class="mb-3 d-flex align-items-end gap-3 wrapper" data-readonly="@(ViewBag.IsReadOnly != null && (bool)ViewBag.IsReadOnly ? "true" : "false")">
    <div>
        <label asp-for="SelectedSortOption" class="form-label">Сортиране</label>
        <select asp-for="SelectedSortOption" class="form-select" id="selectedSortOption">
            @foreach (UserSortOptions sort in Enum.GetValues(typeof(UserSortOptions)))
            {
                <option value="@((int)sort)">@BulgarianLocalization.GetBulgarianSort(sort)</option>
            }
        </select>
    </div>

    <div class="position-relative">
        <label for="filterDepartmentInput" class="form-label">Филтър по Дирекция:</label>
        <div class="input-group">
            <input type="text" id="filterDepartmentInput" class="form-control" value="@Model.FilterDepartmentDescription" autocomplete="off">
            <button type="button" class="btn btn-sm btn-outline-danger" id="clearDepartmentBtn">×</button>
        </div>
        <input type="hidden" id="filterDepartment" name="filterDepartment" value="@Model.FilterDepartmentId">
        <div id="filterDepartmentResults" class="list-group position-absolute" style="z-index:1000;"></div>
    </div>

    <div class="position-relative">
        <label for="filterUnitInput" class="form-label">Филтър по Отдел:</label>
        <div class="input-group">
            <input type="text" id="filterUnitInput" class="form-control" value="@Model.FilterUnitDescription" autocomplete="off" disabled>
            <button type="button" class="btn btn-sm btn-outline-danger" id="clearUnitBtn">×</button>
        </div>
        <input type="hidden" id="filterUnit" name="filterUnit" value="@Model.FilterUnitId">
        <div id="filterUnitResults" class="list-group position-absolute" style="z-index:1000;"></div>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Потребителско име</th>
            <th>Собствено име</th>
            <th>Фамилия</th>
            <th>Дирекция</th>
            <th>Отдел</th>
            <th>Достъп за писане</th>
            <th>Достъп за четене</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model.Users.Items)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Department</td>
                <td>@user.Unit</td>
                <td>@BulgarianLocalization.GetBulgarianAuthorityType(user.WriteAccess)</td>
                <td>@BulgarianLocalization.GetBulgarianAuthorityType(user.ReadAccess)</td>
                @if (Model.WriteAuthority >= AccessManager.Data.Enums.AuthorityType.Restricted)
                {
                    <td>
                        <a asp-controller="User" asp-action="EditUser" asp-route-userid="@user.Id" class="btn btn-sm btn-info">
                            Редактирай
                        </a>
                    </td>
                    <td>
                        <form asp-controller="User" asp-action="SoftDeleteUser" method="post" asp-route-userid="@user.Id">
                            <button type="submit" class="btn btn-danger me-2">
                                Изтрий
                            </button>
                        </form>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("~/Views/Shared/_Pager.cshtml", Model.Users)
<div class="gap-5 wrapper row" data-readonly="@(ViewBag.IsReadOnly != null && (bool)ViewBag.IsReadOnly ? "true" : "false")">
        <a asp-controller="User" asp-action="CreateUser" class="btn btn-success col-md-2">
            Добави потребител
        </a>
        <a asp-controller="User" asp-action="DeletedUsers" class="btn btn-danger col-md-2">
            Виж изтритите потребители
        </a>
        <a asp-controller="File" asp-action="UsersCsv" class="btn btn-primary col-md-3">
            Експортирай CSV с потребители
        </a>
        <a asp-controller="File" asp-action="UsersUnitsCsv" class="btn btn-primary col-md-3">
            Експортирай CSV с достъпните отдели за потребители
        </a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/user-list.js" asp-append-version="true"></script>
}
